<body>

    <div class="container">
        <h2>Movie Search App</h2>

        <input id="movieInput" placeholder="Search for a movie..." />
        <button onclick="searchMovie()">Search</button>

        <div id="results"></div>
    </div>

    <script>
        async function searchMovie() {
            const query = document.getElementById("movieInput").value.trim();
            if (query === "") return;

            const url = `https://www.omdbapi.com/?apikey=thewdb&s=${query}`;

            const res = await fetch(url);
            const data = await res.json();

            const resultsBox = document.getElementById("results");
            resultsBox.innerHTML = "";

            if (!data.Search) {
                resultsBox.innerHTML = "<p>No movies found.</p>";
                return;
            }

            data.Search.forEach(movie => {
                const div = document.createElement("div");
                div.className = "movie";

                div.innerHTML = `
                    <img src="${movie.Poster !== 'N/A' ? movie.Poster : 'https://via.placeholder.com/120'}" />
                    <div class="info">
                        <h3>${movie.Title}</h3>
                        <p>Year: ${movie.Year}</p>
                        <p>Type: ${movie.Type}</p>
                    </div>
                `;

                resultsBox.appendChild(div);
            });
        }
    </script>

</body>
